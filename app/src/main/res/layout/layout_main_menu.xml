<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="278dp"
    tools:context=".fragments.HomeFragment"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="160dp"
        android:layout_height="50dp"
        android:layout_gravity="right"
        android:layout_marginTop="24dp"
        android:background="@drawable/title_menu"
        android:fontFamily="@font/estedad_black"
        android:gravity="center_vertical"
        android:paddingEnd="20dp"
        android:text="منوی رستوران"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlSymmetry" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4">

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layoutDirection="rtl"
            tools:ignore="UselessParent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <FrameLayout
                    android:id="@+id/layout_main_course"
                    android:layout_width="136dp"
                    android:layout_height="170dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="20dp">
                    <View
                        android:layout_width="136dp"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom"
                        android:elevation="4dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/backview_menu" />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center|bottom"
                        android:background="@drawable/textview_menu"
                        android:gravity="center"
                        android:text="غذای اصلی"
                        android:elevation="4dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/estedad_medium"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:elevation="4dp"
                        android:layout_gravity="center|top"
                        android:src="@drawable/profile" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/layout_appetizer"
                    android:layout_width="136dp"
                    android:layout_height="170dp"
                    android:layout_marginEnd="20dp">
                    <View
                        android:layout_width="136dp"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom"
                        android:elevation="4dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/backview_menu" />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center|bottom"
                        android:background="@drawable/textview_menu"
                        android:gravity="center"
                        android:text="پیش غذا"
                        android:elevation="4dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/estedad_medium"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:elevation="4dp"
                        android:layout_gravity="center|top"
                        android:src="@drawable/profile" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/layout_dessert"
                    android:layout_width="136dp"
                    android:layout_height="170dp"
                    android:layout_marginEnd="20dp">
                    <View
                        android:layout_width="136dp"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom"
                        android:elevation="4dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/backview_menu" />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center|bottom"
                        android:background="@drawable/textview_menu"
                        android:gravity="center"
                        android:text="دسر"
                        android:elevation="4dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/estedad_medium"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:elevation="4dp"
                        android:layout_gravity="center|top"
                        android:src="@drawable/profile" />
                </FrameLayout>

                <FrameLayout
                    android:id="@+id/layout_beverages"
                    android:layout_width="136dp"
                    android:layout_height="170dp"
                    android:layout_marginEnd="20dp">
                    <View
                        android:layout_width="136dp"
                        android:layout_height="80dp"
                        android:layout_gravity="bottom"
                        android:elevation="4dp"
                        android:layout_marginBottom="15dp"
                        android:background="@drawable/backview_menu" />
                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="32dp"
                        android:layout_marginBottom="8dp"
                        android:layout_gravity="center|bottom"
                        android:background="@drawable/textview_menu"
                        android:gravity="center"
                        android:text="نوشیدنی"
                        android:elevation="4dp"
                        android:textSize="12sp"
                        android:fontFamily="@font/estedad_medium"/>
                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:elevation="4dp"
                        android:layout_gravity="center|top"
                        android:src="@drawable/profile" />
                </FrameLayout>
            </LinearLayout>
        </HorizontalScrollView>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>