<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".VerifyCodeActivity"
    android:background="@color/Gray_1">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="85dp"
        android:contentDescription="@string/DC_login_logo"
        android:src="@drawable/login_app_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/estedad_bold"
        android:text="کد تائید"
        android:textColor="@color/Gray_8"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/estedad_medium"
        android:text="کد تایید پنج رقمی به شماره s% ارسال شد."
        android:textColor="@color/Gray_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"/>

    <LinearLayout
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4">
        
        <EditText
            android:id="@+id/editText1"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:textAlignment="center"
            android:inputType="number"
            android:background="@drawable/edit_text_border"
            android:maxLength="1"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/editText2"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:maxLength="1"
            android:inputType="number"
            android:textAlignment="center"
            android:background="@drawable/edit_text_border"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/editText3"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:background="@drawable/edit_text_border"
            android:inputType="number"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/editText4"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:maxLength="1"
            android:textAlignment="center"
            android:background="@drawable/edit_text_border"
            android:inputType="number"
            android:layout_marginEnd="16dp"/>

        <EditText
            android:id="@+id/editText5"
            android:layout_width="51dp"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:background="@drawable/edit_text_border"
            android:inputType="number"
            android:textAlignment="center"
            android:maxLength="1"/>



    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>