<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.ShopFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/shop_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="@color/Primary">

        <TextView
            android:id="@+id/txt_titleToolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:fontFamily="@font/estedad_bold"
            android:text="سبد خرید"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:gravity="end">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/peymanet_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="روش پرداخت"
                android:fontFamily="@font/estedad_medium"
                android:textSize="12sp"
                android:textColor="@color/Gray_4"/>

            <ImageView
                android:id="@+id/payment_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:tint="@color/Gray_4"
                android:layout_marginStart="4dp"
                android:src="@drawable/wallet"/>

            <TextView
                android:id="@+id/payment_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="- - - - - -"
                android:fontFamily="@font/estedad_medium"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:textColor="@color/Gray_4"/>

        </LinearLayout>
        
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">
            
            <TextView
                android:id="@+id/info_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="تکمیل اطلاعات"
                android:fontFamily="@font/estedad_medium"
                android:textSize="12sp"
                android:textColor="@color/Gray_4"/>

            <ImageView
                android:id="@+id/info_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:tint="@color/Gray_4"
                android:layout_marginStart="4dp"
                android:src="@drawable/tick_square"/>

            <TextView
                android:id="@+id/info_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=" - - -"
                android:fontFamily="@font/estedad_medium"
                android:textSize="12sp"
                android:layout_marginStart="4dp"
                android:textColor="@color/Gray_4"/>
            
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/card_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="سبد خرید - - - "
                android:fontFamily="@font/estedad_medium"
                android:textSize="12sp"
                android:textColor="@color/Primary"/>

            <ImageView
                android:id="@+id/card_img"
                android:layout_width="16dp"
                android:layout_height="16dp"
                app:tint="@color/Primary"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/shopping_cart"/>

        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/layout_shopingCard"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="89dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="24dp">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recycler_shopingCard"
                        android:layout_width="match_parent"
                        android:layout_height="187dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:dividerColor="@color/Gray_4"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/txt_OrderDiscount"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/food_price"
                            android:textColor="@color/Gray_7"
                            android:textSize="14sp"
                            android:fontFamily="@font/estedad_medium"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="تحفیف محصولات"
                            android:textColor="@color/Gray_8"
                            android:textSize="14sp"
                            android:fontFamily="@font/estedad_medium"/>

                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        app:dividerColor="@color/Gray_4"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="25dp"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginTop="12dp">

                            <TextView
                                android:id="@+id/txt_shiping"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="@string/food_price"
                                android:textColor="@color/Gray_7"
                                android:textSize="14sp"
                                android:fontFamily="@font/estedad_medium"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="هزینه ارسال"
                                android:textColor="@color/Gray_8"
                                android:textSize="14sp"
                                android:fontFamily="@font/estedad_medium"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="36dp"
                                android:layout_marginEnd="8dp"
                                android:text="هزینه ارسال در ادامه بر اساس آدرس، زمان و نحوه ارسال انتخابی شما محاسبه و به این مبلغ اضافه خواهد شد."
                                android:textColor="@color/warning"
                                android:fontFamily="@font/estedad_medium"
                                android:textSize="10sp"/>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                app:srcCompat="@drawable/warning" />

                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            app:dividerColor="@color/Gray_4"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp">

                        <TextView
                            android:id="@+id/txt_OrderSum"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="@string/food_price"
                            android:textColor="@color/Primary"
                            android:textSize="14sp"
                            android:fontFamily="@font/estedad_medium"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="مبلغ قابل پرداخت"
                            android:textColor="@color/Gray_8"
                            android:textSize="14sp"
                            android:fontFamily="@font/estedad_medium"/>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_payment"
                        android:layout_width="match_parent"
                        android:layout_height="45dp"
                        android:layout_marginTop="12dp"
                        android:backgroundTint="@color/Primary"
                        android:fontFamily="@font/estedad_medium"
                        android:text="تکمیل اطلاعات       >"
                        app:cornerRadius="4dp"
                        android:padding="1dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/layout_phoneNumber"/>

                </LinearLayout>

            </androidx.core.widget.NestedScrollView>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="89dp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end|center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="روش تحویل سفارش"
                                android:layout_marginEnd="4dp"
                                android:fontFamily="@font/estedad_medium"
                                android:textSize="14sp"/>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                app:srcCompat="@drawable/truck" />

                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:dividerColor="@color/Gray_4"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="match_parent"
                                android:layout_marginTop="16dp"
                                android:orientation="vertical">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:gravity="end|center_vertical">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_marginEnd="4dp"
                                        android:src="@drawable/truck_fast"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="ارسال توسط پیک"
                                        android:fontFamily="@font/estedad_medium"
                                        android:textSize="12sp"
                                        android:textColor="@color/Gray_7"/>

                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginTop="4dp"
                                    android:gravity="end|center_vertical">

                                    <ImageView
                                        android:layout_width="16dp"
                                        android:layout_height="16dp"
                                        android:layout_marginEnd="4dp"
                                        android:src="@drawable/shopping_bag"/>

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="تحویل حضوری"
                                        android:fontFamily="@font/estedad_medium"
                                        android:textSize="12sp"
                                        android:textColor="@color/Gray_7"/>

                                </LinearLayout>

                            </LinearLayout>

                            <RadioGroup
                                android:layout_width="35dp"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:layoutDirection="rtl"
                                android:layout_marginTop="16dp">

                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="22dp"/>

                                <com.google.android.material.radiobutton.MaterialRadioButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="22dp"
                                    android:layout_marginTop="4dp"/>

                            </RadioGroup>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_adresses"
                    android:layout_width="match_parent"
                    android:layout_height="285dp"
                    android:layout_marginTop="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end|center_vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="افزودن آدرس"
                                android:fontFamily="@font/estedad_medium"
                                android:textSize="12sp"
                                android:textColor="@color/Gray_8"/>

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/close_circle"/>

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="آدرس‌ها"
                                android:fontFamily="@font/estedad_medium"
                                android:textSize="14sp"
                                android:textColor="@color/Gray_8"/>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="4dp"
                                android:src="@drawable/location"/>
                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            app:dividerColor="@color/Gray_4"/>

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recyclerView_COI"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"/>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:visibility="gone">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end|center_vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="آدرس شعبه اکباتان"
                                android:fontFamily="@font/estedad_medium"
                                android:textSize="14sp"
                                android:textColor="@color/Gray_8"/>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="8dp"
                                app:srcCompat="@drawable/location"/>

                        </LinearLayout>

                        <com.google.android.material.divider.MaterialDivider
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            app:dividerColor="@color/Gray_4"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="شهرک اکباتان، فاز ۳، مجتمع تجاری کوروش، طبقه سوم"
                                android:layout_marginTop="16dp"
                                android:fontFamily="@font/estedad_medium"
                                android:textSize="10sp"
                                android:textColor="@color/Gray_7"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="شماره تماس: ۰۲۱-۵۴۸۹۱۲۵۰-۵۱"
                                android:layout_marginTop="4dp"
                                android:fontFamily="@font/estedad_medium"
                                android:textSize="10sp"
                                android:textColor="@color/Gray_7"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="ساعت کاری: همه‌روزه از ساعت ۱۲ تا ۲۳ بجز روزهای تعطیل"
                                android:fontFamily="@font/estedad_medium"
                                android:textSize="10sp"
                                android:textColor="@color/Gray_7"/>
                            
                        </LinearLayout>
                        
                    </LinearLayout>
                    
                </com.google.android.material.card.MaterialCardView>
                
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="141dp"
                    android:layout_marginTop="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="end|center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:layout_height="wrap_content"
                                android:text="توضیحات سفارش (اختیاری)"
                                android:fontFamily="@font/estedad_medium"
                                android:textSize="14sp"
                                android:textColor="@color/Gray_7"/>

                            <ImageView
                                android:layout_width="16dp"
                                android:layout_height="16dp"
                                android:layout_marginStart="8dp"
                                app:srcCompat="@drawable/location"
                                app:tint="@color/Gray_7" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:backgroundTint="@android:color/transparent"
                                android:fontFamily="@font/estedad_medium"
                                android:inputType="textMultiLine"
                                android:padding="16dp"
                                android:textColor="@color/Gray_7"
                                android:textSize="10sp"/>


                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </RelativeLayout>
</FrameLayout>