<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".fragments.MainCourseFragment"
    android:orientation="vertical">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include
                android:id="@+id/layout_menu_rec_1"
                layout="@layout/layout_menu_rec_1" />

            <include
                android:id="@+id/layout_menu_rec_2"
                layout="@layout/layout_menu_rec_2"/>

            <include
                android:id="@+id/layout_menu_rec_3"
                layout="@layout/layout_menu_rec_3"/>

            <include
                android:id="@+id/layout_menu_rec_4"
                layout="@layout/layout_menu_rec_4"/>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>