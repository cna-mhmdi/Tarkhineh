<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="168dp"
    android:layout_height="231dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    android:layout_marginStart="16dp"
    android:layout_marginBottom="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_food"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:src="@color/Gray_8"/>
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_foodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/estedad_medium"
                android:text="اسم عذا"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_food_discount"
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="75dp"
                android:background="@drawable/background_discount"
                android:fontFamily="@font/estedad_medium"
                android:gravity="center"
                android:text="%8"
                android:textColor="@color/Error"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_food_discount_sum"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="31dp"
                android:fontFamily="@font/estedad_medium"
                android:text="200.000"
                android:textColor="@color/Gray_5"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/txt_food_discount"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_food_price"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="53dp"
                android:fontFamily="@font/estedad_medium"
                android:text="240.000 تومان"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_food_discount" />

            <ImageView
                android:id="@+id/img_addToFavorite"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginStart="56dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="13dp"
                android:src="@drawable/app_heart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/txt_food_discount_sum"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_marginStart="54dp"
                android:orientation="horizontal"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@+id/txt_food_price"
                app:layout_constraintTop_toBottomOf="@+id/img_addToFavorite">

                <TextView
                    android:id="@+id/txt_starCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="5"
                    android:textColor="@color/Gray_8"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/star_rate" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_addToShoppingCard"
                android:layout_width="152dp"
                android:layout_height="38dp"
                android:backgroundTint="@color/Primary"
                android:layout_marginBottom="8dp"
                android:text="افزدون به سبد خرید"
                android:textSize="10sp"
                app:cornerRadius="4dp"
                android:fontFamily="@font/estedad_medium"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>

