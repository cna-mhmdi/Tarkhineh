<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="168dp"
    android:layout_height="231dp"
    android:layout_marginStart="8dp"
    android:layout_marginEnd="8dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="4dp"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_food"
            android:layout_width="match_parent"
            android:layout_height="109dp"
            android:contentDescription="@string/CD_foodImage"
            android:src="@color/Gray_8" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_foodName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/estedad_medium"
                android:text="@string/food_name"
                android:textSize="12sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/txt_food_discount"
                android:layout_width="32dp"
                android:layout_height="16dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="31dp"
                android:layout_marginBottom="75dp"
                android:background="@drawable/background_discount"
                android:fontFamily="@font/estedad_medium"
                android:gravity="center"
                android:text="@string/food_discount"
                android:textColor="@color/Error"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/txt_food_discount_sum"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="31dp"
                android:fontFamily="@font/estedad_medium"
                android:text="@string/food_dis_sum"
                android:textColor="@color/Gray_5"
                android:textSize="10sp"
                app:layout_constraintStart_toEndOf="@+id/txt_food_discount"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="SmallSp" />

            <TextView
                android:id="@+id/txt_food_price"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="53dp"
                android:fontFamily="@font/estedad_medium"
                android:text="@string/food_price"
                android:textSize="10sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_food_discount"
                tools:ignore="SmallSp" />

            <ImageView
                android:id="@+id/img_addToFavorite"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="31dp"
                android:layout_marginEnd="13dp"
                android:contentDescription="@string/CD_addToFavorite"
                android:src="@drawable/app_heart"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_marginEnd="2dp"
                android:gravity="center"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_addToFavorite"
                tools:ignore="UseCompoundDrawables">

                <TextView
                    android:id="@+id/txt_starCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="4dp"
                    android:text="@string/food_star"
                    android:textColor="@color/Gray_8"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:contentDescription="@string/star_img"
                    android:src="@drawable/star_rate" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_addToShoppingCard"
                android:layout_width="152dp"
                android:layout_height="38dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/Primary"
                android:fontFamily="@font/estedad_medium"
                android:text="@string/add_to_shopping_card"
                android:textSize="10sp"
                app:cornerRadius="4dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:ignore="SmallSp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

